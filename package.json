{
  "name": "backstage",
  "version": "0.0.0",
  "description": "API for musicians hub application",
  "license": "MIT",
  "homepage": "https://github.com/MattZ6/backstage",
  "repository": {
    "type": "git",
    "url": "https://github.com/MattZ6/backstage"
  },
  "bugs": {
    "url": "https://github.com/MattZ6/backstage/issues"
  },
  "author": {
    "email": "matt_z6@hotmail.com",
    "name": "Matheus Felipe Zanin",
    "url": "https://github.com/MattZ6"
  },
  "scripts": {
    "start": "NODE_ENV=production bun ./src/main/server.ts",
    "dev": "bun --watch ./src/main/server.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ignore-path .gitignore 'src/**/*.+(ts|js)'",
    "lint:fix": "bun lint --fix",
    "test": "bun test",
    "test:cov": "bun test --coverage",
    "docker:dev": "DATABASE_PORT=5432 bun dev",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "prisma:dev": "DATABASE_HOST=localhost prisma",
    "db:migrate": "bun prisma migrate deploy",
    "db:config": "bun db:migrate"
  },
  "prisma": {
    "schema": "src/infra/database/prisma/schema.prisma"
  },
  "devDependencies": {
    "@faker-js/faker": "8.0.2",
    "@rocketseat/eslint-config": "2.1.0",
    "bun-types": "1.0.1",
    "eslint": "8.49.0",
    "eslint-plugin-import-helpers": "1.3.1",
    "git-commit-msg-linter": "5.0.4",
    "prisma": "5.3.0",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@elysiajs/cors": "0.6.0",
    "@prisma/client": "5.3.0",
    "cross-env": "7.0.3",
    "elysia": "0.6.23",
    "elysia-helmet": "1.0.1"
  }
}
